{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cc-usage-widget",
  "version": "0.1.0",
  "identifier": "com.shane.cc-usage-widget",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "enableGTKAppId": true,
    "windows": [
      {
        "label": "main",
        "title": "Claude Code Usage",
        "width": 360,
        "height": 540,
        "resizable": true,
        "minWidth": 320,
        "minHeight": 500,
        "maximizable": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
